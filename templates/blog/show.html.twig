{% extends 'base.html.twig' %}
{% block body %}
<article>
	<h2>
		{{ article.title }}
	</h2>
	<div class="metadata">
		Ecrit le
		{{ article.createdAt | date('d/m/y') }}
		à
		{{ article.createdAt | date('H:i') }}
		dans la catégorie
		{{ article.category.title }}
	</div>
	<img alt="" src="{{ article.image }}">
	{{ article.content | raw }}
	<a href="{{ path('blog-edit',{'id':article.id}) }}" class="btn btn-primary">Modifier l'article</a>
	
</article>
<section id="commentaire">
<a href="{{ path('comment_create',{'id':comment.id})}}" class="btn btn-primary">nouveau commentaire:</a>

	<h2>Liste des commentaires:</h2>
	{% for comment in article.comments %}

	<div class="comment">
		<div class="row">
			<div class="col-3">
				{{ comment.author }}
				(<small>{{ comment.createdAt | date ('d/m/Y à H:i') }}</small>)
			</div>
			<div class="col">
				{{ comment.content | raw }}
<a href="{{ path('comment-edit',{'id':comment.id}) }}" class="btn btn-primary">Modifier le commentaire</a>
			</div>
		</div>
	</div>
	{% endfor %}
</section>

{% endblock %}